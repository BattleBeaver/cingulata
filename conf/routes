# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

#Auth
#POST        /signup                  controllers.AuthController.signup
#POST        /login                   controllers.AuthController.login
#POST        /logout                  controllers.AuthController.logout
#GET         /secure                  controllers.AuthController.securedSampleAction

#items
GET         /item/details/:id           controllers.ItemController.details(id: String)
GET         /item/filters               controllers.ItemController.filters
GET         /item/all                   controllers.ItemController.all
GET         /item/all/:pageNum          controllers.ItemController.allForPage(pageNum: Int)

#admin
GET         /admin/categories           controllers.ItemController.categories
GET         /admin/subcategories        controllers.ItemController.subcategories
GET         /admin/activity             controllers.AdminController.userActivity

#user
GET         /user                       controllers.AuthController.loginForm
GET         /user/registration          controllers.AuthController.registrationForm
POST        /user/login                 controllers.AuthController.login
POST        /user/register              controllers.AuthController.signup
GET         /user/logout                controllers.AuthController.logout
